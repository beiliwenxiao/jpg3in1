{
    "name": "framework/multi-language-communication-framework",
    "description": "PHP SDK for multi-language communication framework using Webman",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "workerman/webman-framework": "^1.5",
        "workerman/workerman": "^4.1",
        "firebase/php-jwt": "^7.0",
        "google/protobuf": "^3.25",
        "promphp/prometheus_client_php": "^2.10",
        "react/promise": "^3.1",
        "monolog/monolog": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "mockery/mockery": "^1.6",
        "giorgiosironi/eris": "^0.14"
    },
    "autoload": {
        "psr-4": {
            "Framework\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FrameworkTest\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "test-run": "phpunit --no-coverage"
    }
}
